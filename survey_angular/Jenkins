pipeline {
    agent any
    environment {
        PROJECT_ID = 'swe642'
    }
    stages {
        stage("Checkout code") {
            steps {
                checkout scm
            }
        }
        stage('BuildAngular') {
            steps {
                
            	dir('src/main/webapp') {
                    def workspace = env.WORKSPACE
            		echo 'Creating the Jar ...${workspace}'
					sh 'ng build'
            	}
            }
        }
        
    }    
}